.stepper-container{
  display: inline-block;
}
.input-wrapper{
  vertical-align: middle;
  display: inline-block;
  height: 80rpx;
  width: 120rpx;
  border:1px solid #ddd;
  border-radius: 8rpx;
  margin:0 10rpx;
}
.input{
  width: 100%;
  height: 100%;
  text-align: center;
  padding:0 10rpx;
  font-size: 30rpx;
  color: #333;
}
.btn{
  vertical-align: middle;
  background: #666;
  color: #fff;
  display: inline-block;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}
.btn.disabled{
  opacity: .4;
}
.btn-hover-class{
  opacity: .8;
}