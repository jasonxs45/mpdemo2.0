.location{
  width: 120rpx;
  text-align: center;
  margin-left: 15rpx;
  padding:0 15rpx;
  color: rgba(var(--r), var(--g), var(--b), 1);
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(var(--r), var(--g), var(--b), .1);
  border-radius: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.loading{
  display: inline-block;
  animation: circle 1s linear infinite;
}