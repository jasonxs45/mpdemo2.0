.bg{
  position: fixed;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  z-index: 99999;
}
.auth-box{
  width: 660rpx;
  background: #fff;
  border-radius: 8rpx;
  min-height: 100rpx;
  position: fixed;
  top:50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100000;
  padding: 30rpx;
}
.tit{
  margin-top: 50rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(0,0,0,1);
  line-height:50rpx;
  letter-spacing:2rpx;
  text-align: center;
}
.sub-tit{
  font-size:24rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  letter-spacing:2rpx;
  text-align: center;
  margin-top: 40rpx;
}
.ads{
  display: flex;
  justify-content: space-around;
}
.item{
  margin: 90rpx 0;
}
.img{
  width: 114rpx;
  height: 114rpx;
}
.item .txt{
  letter-spacing: 2rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.rule .checkbox{
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  border: 1px solid #ddd;
  vertical-align: top;
  line-height: 1;
  margin-right: 10rpx;
  position: relative;
}
.rule .checkbox.active{
  border-color: rgba(var(--r), var(--g), var(--b), 1);
}
.rule .checkbox.active:after{
  display: inline-block;
  content: '';
  position: absolute;
  background: rgba(var(--r), var(--g), var(--b), 1);
  top: 3rpx;
  right: 3rpx;
  left: 3rpx;
  bottom: 3rpx;
}
.rule .checkbox:after{
  display: none;
}
.rule .text{
  display: inline-block;
  vertical-align: top;
  line-height: 28rpx;
}
.rule{
  font-size: 24rpx;
  color: #999;
  padding:0 30rpx;
}
.nav{
  display: inline-block;
  color: rgba(var(--r), var(--g), var(--b), 1);
}
.btns{
  justify-content: center;
  margin: 30rpx 0;
}
button.confirm,
button.cancel{
  width: 480rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  margin: 0;
}
button.confirm{
  background: rgba(var(--r), var(--g), var(--b), 1);
  color: #fff;
}
button.cancel{
  border:1px solid rgba(var(--r), var(--g), var(--b), 1);
  background: #fff;
  color: rgba(var(--r), var(--g), var(--b), 1);
}
.btns .confirm.unable{
  opacity: .3;
  background: rgba(var(--r), var(--g), var(--b), 1);
  color: #fff;
}
button.auth-btn {
  position: relative;
  width: auto;
  height: 100%;
  margin: 0;
  padding:0;
  font-size: inherit;
  text-align: inherit;
  text-decoration: none;
  line-height: 1;
  border-radius: 0;
  overflow: hidden;
  color: #000;
  background: none;
  font-weight: normal;
}

