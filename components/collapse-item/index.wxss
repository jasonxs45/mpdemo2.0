.collapse-head{
  position: relative;
}
.collapse-head.shadow:after{
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
  box-shadow: 0 10px 20px -10px rgba(0, 0, 0, .3);
  left: 0;
  top:0;
}
.collapse-body{
  overflow: hidden;
}
.transition{
  transition: height .2s ease-in-out;
}