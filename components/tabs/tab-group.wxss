.tab-group {
  width: 100%;
  height: 100rpx;
  /* border-bottom: 1rpx solid #ddd; */
  box-shadow: 0 1rpx 1rpx 0 rgba(0, 0, 0, .1);
}
.scroll-view{
  height: inherit;
}
.tab-group-wrapper {
  display: flex;
  height: inherit;
  position: relative;
}

.line {
  width: 100rpx;
  height: 6rpx;
  position: absolute;
  background-color: #f00;
  bottom: 0;
  left: 0;
  z-index: 1;
  border-radius: 3px;
  transition: transform .2s;
}
