.item{
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd;
  align-items: center;
}
.item:last-child{
  border-bottom: none;
}
.item .avatar{
  width: 120rpx;
  height: 120rpx;
}
.info {
  flex: 1;
  padding:0 30rpx;
}
.info .name{
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.info .belongs{
  font-size: 24rpx;
  color: #888;
  margin-top:10rpx;
  line-height: 1.5;
}
.info .belongs .tit{
  font-weight: 500;
  color: #333;
}
.contact{
  width: 80rpx;
  text-align: right;
  font-size: 0;
}
.contact .btn{
  display: inline-block;
  background: rgba(149,109,55, 1);
  width: 80rpx;
  height: 80rpx;
  padding:0;
  line-height: 80rpx;
  text-align: center;
  margin: 15rpx auto;
  color: #fff;
  border-radius: 50%;
  font-size: 50rpx;
  margin-left: 15rpx;
}
.contact .btn:first-child{
  margin-left: 0;
}