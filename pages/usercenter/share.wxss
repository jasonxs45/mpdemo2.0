.tabs{
  display: block;
  background: #fff;
}
.tab-item.active{
  background: #fff;
  font-weight:bold;
  color:rgba(var(--r), var(--g), var(--b), 1);
}
.main{
  width: 100%;
  height: calc(100vh - 100rpx);
}
.scroll-view{
  width: 100%;
  height: 100%;
}
.list-container{
  padding-top: 15rpx !important;
}
.card{
  background: #fff;
  align-items: center;
  padding: 30rpx;
}
.card .thumbnail{
  flex: 0 0 180rpx;
  height: 160rpx;
}
.card .content{
  width: 300rpx;
  flex: 1;
  padding:0 30rpx;
}
.card .content .title{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.5;
}
.card .content .desc{
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
  line-height: 1.5;
  color: #888;
}
.card .vote{
  flex: 0 0 140rpx;
  text-align: center;
}
.card .vote .iconfont{
  font-size: 40px;
  color: rgba(var(--r), var(--g), var(--b), 1);
}
.card .vote .count{
  font-size: 20rpx;
}
.card .vote .count text{
  color: rgba(var(--r), var(--g), var(--b), 1);
  font-weight: 600;
}