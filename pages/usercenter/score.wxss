.top {
  position: relative;
  width: 100%;
  height: 240rpx;
  text-align: center;
  background: rgba(var(--r), var(--g), var(--b), 1) url('') center/100% 100% no-repeat;
}
.help{
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 60rpx;
  color: #fff;
}
.top .t{
  padding-top: 30rpx;
  font-size:24rpx;
  color:rgba(255,255,255,1);
  line-height:34rpx;
  text-shadow:4rpx 8rpx 8rpx rgba(234,85,50,0.5);
}
.top .count {
  font-size: 96rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 134rpx;
}

.list-container {
  padding-top: 0 !important;
}
.card{
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
}
.card:last-child{
  border-bottom: none;
}
.reason .text{
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}
.reason .time{
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-top: 15rpx;
}
.score{
  font-size: 36rpx;
  font-weight: 500;
}
.score.po{
  color: rgba(var(--r), var(--g), var(--b), 1);
}
.score.ne{
  color: #999;
}
