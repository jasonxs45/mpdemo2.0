/* pages/subscribe/consultant.wxss */
@import "../index.wxss";
page{
  background: #fff;
}
.step{
  padding: 30rpx 0;
}
.step{ 
  margin-bottom: 30rpx;
  padding: 30rpx 0;
}
.title{
  font-size: 38rpx;
  font-weight: 500;
  padding:0 30rpx 40rpx;
}

.listScroll{
  height: 60vh;
}
.list{
  margin:30rpx;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 50rpx;
}
.list>text{
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
}
.list>text.on{
  background: rgba(var(--r), var(--g), var(--b), 1);
}
.list>view{
  width: 80rpx;
  height: 80rpx;
  background: #ccc;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  margin-right: 30rpx;
}
.list>view image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list .icon02{
  position: absolute;
  font-size: 40rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}
.but{
  width:630rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:rgba(var(--r), var(--g), var(--b), 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(var(--r), var(--g), var(--b), 0.3);
  border-radius:4rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  margin:80rpx auto;
}