.tips {
  padding: 30rpx;
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.poster-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.8);
}

.poster-wrapper {
  position: fixed;
  z-index: 100;
  width: 600rpx;
  height: 800rpx;
  background: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 8rpx;
}

.poster-wrapper .title {
  padding: 30rpx;
  text-align: center;
}

.poster {
  display: block;
  margin: 0 auto;
  width: 500rpx;
  height: 500rpx;
  background: #f2f2f2;
}

.poster-wrapper .btns {
  margin: 60rpx 0 30rpx;
}

.huxing {
  margin-top: 15rpx;
}

.cl {
  align-items: flex-end;
  justify-content: space-between;
}

.brief-info .price {
  margin-top: 15rpx;
}

.brief-info .price .p {
  padding-right: 30rpx;
  margin-top: 15rpx;
}

.brief-info .price .p .ph {
  flex: 0 0 80rpx;
}

.to-calc {
}

.to-calc .icon {
  font-size: 42rpx;
  line-height: 42rpx;
  color: rgba(var(--r), var(--g), var(--b), 1);
  vertical-align: middle;
}

.to-calc .txt {
  font-size: 28rpx;
  color: #666;
  line-height: 42rpx;
  vertical-align: middle;
}
