/* rgba(149,109,55, 1) */
.section {
  padding: 30rpx 0;
  background: #fff;
}

.title {
  font-size: 22rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 32rpx;
}

.input-line {
  margin: 30rpx 0;
  background: rgba(248, 248, 248, 1);
  border-radius: 4rpx;
}

.input-line x-input, .input-line x-picker {
  width: 100%;
}

.btns {
  padding: 100rpx 0 90rpx;
}

.btn {
  margin: 60rpx auto;
}
.btn.opac{
  opacity: .3;
}

.result {
  width: 100vw;
  height: 100vh;
  background: #fff;
  padding: 30rpx 60rpx 60rpx;
}

.result .icon {
  display: block;
  width: 338rpx;
  margin: 80rpx auto 50rpx;
}
.icon .font{
display: block;
width: 200rpx;
height: 200rpx;
text-align: center;
background: rgba(149,109,55, 1);
color: #fff;
margin: 0 auto;
line-height: 200rpx;
font-size: 120rpx;
border-radius: 50%;
}

.tit {
  font-size: 42rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 58rpx;
  letter-spacing: 4rpx;
  text-align: center;
  margin: 50rpx 0;
}
.desc{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  letter-spacing:2rpx;
  text-align: center;
  margin: 60rpx 0;
}
.p{
  margin: 30rpx 0;
}
.ph{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  line-height:40rpx;
  flex: 0 0 180rpx;
}
.pb{
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  flex: 1;
}
.link{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  color: rgba(149,109,55,1);
  text-align: center;
  text-decoration: underline;
}
.go-chat .btn{
  margin: 60rpx auto 30rpx;
}
button.tel-btn{
  height: 90rpx;
  line-height: 90rpx;
  margin: 0;
  width: 100%;
  text-align: left;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #666;
}
.tel-input{
  height: 90rpx;
  line-height: 90rpx;
  margin: 0;
  width: 100%;
  text-align: left;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
}
.consult-info{
  justify-content: space-between;
  align-items: center;
}
.consult-info .title{
  flex: 0 0 160rpx;
}
.consult-info .consult-name{
  flex: 1;
  text-align: right;
}
.consults{
  margin: 30rpx -15rpx;
}
.consult-wrapper{
  box-sizing: border-box;
  display: inline-block;
  font-size: 0;
  width: 50%;
  padding:0 15rpx;
  margin: 15rpx 0;
}
.consult-wrapper .radio{
  opacity: 0;
  width: 0;
  height: 0;
  display: none;
}
.consult{
  padding:15rpx;
  background: rgba(248, 248, 248, 1);
  border-radius: 8rpx;
  color: #888;
  align-items: center;
}
.consult-wrapper .radio[checked] + .consult {
  background: rgba(149,109,55, .9);
  color: #fff;
}
.consult .avatar{
  width: 70rpx;
  height: 70rpx;
  display: block;
  border-radius: 50%;
  opacity: .7;
  box-shadow: none;
}
.consult-wrapper .radio[checked] + .consult .avatar{
  opacity: 1;
  box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, .2);
}
.consult .name{
  flex: 1;
  font-size: 28rpx;
  margin-left: 10rpx;
  line-height: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}