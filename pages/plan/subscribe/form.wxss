/* pages/subscribe/form.wxss */
@import "../index.wxss";
page{
  background: rgb(240, 242, 245);
  padding-bottom: 30rpx;
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}
.step{ 
  margin-bottom: 60rpx;
  background: #fff;
  padding: 30rpx;
}
.room{
  margin: 30rpx;
}
.room .item1{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.room .item2{
  line-height: 40rpx;
}
.form{ 
  margin: 30rpx;
  background: #fff;
  padding:60rpx 30rpx 30rpx 30rpx;
  border-radius: 8rpx;
}
.fonmTitle{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.fonmTitle text{
  float:right;
  background: rgba(149,109,55, 1);
  color: #fff;
  padding:0 20rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
}
.fonmTitle text.on{
  background: #f22424;
}
.input{ margin-bottom: 40rpx;}
.input .inputTitle{
  font-size:24rpx;
  color:rgba(102,102,102,1);
  line-height:32rpx;
  margin-bottom: 20rpx;
}
.input .inputText{
  padding:0 70rpx 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:rgba(248,248,248,1);
  border-radius:4rpx;
  position: relative;
  font-size:24rpx;
  margin-bottom: 20rpx;
}
.input .inputText input{
  height: 80rpx;
  line-height: 80rpx;
  font-size:28rpx;
}
.input .inputText picker{
  height: 100%;
  width: 100%;
  line-height: 80rpx;
}
.input .inputText view{
  line-height: 80rpx;
  font-size: 28rpx;
}
.input .icon01,
.input .icon12{
  width: 60rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  right: 0rpx;
  text-align: center;
  transform: translateY(-50%);
  line-height: 1 !important;
}
.input .icon12{
  line-height: 80rpx !important;
}
.input .icon01 icon{
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.but{
  width:630rpx;
  height:88rpx !important;
  line-height: 88rpx !important;
  padding: 0 !important;
  text-align: center;
  background:rgba(149,109,55, 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(149,109,55, 0.3);
  border-radius:4rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  margin:80rpx auto;
}

.box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.5);
  z-index: 2;
}
.boxMain{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 700rpx;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 10rpx;
  padding: 50rpx 40rpx;
}
.boxTitle{
  text-align: center;
  font-size: 36rpx;
}
.boxText{
  height: 50vh;
  overflow-y: auto;
  margin:30rpx 0;
}
.boxBut{
  width:430rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:rgba(149,109,55, 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(149,109,55, 0.3);
  border-radius:4rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  margin: 0 auto;
}
.item2 .out{
  font-weight: 500;
  color: rgba(149,109,55, 1);
}