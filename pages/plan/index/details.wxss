/* pages/index/details.wxss */
@import "../index.wxss";
page{
  background: #F2F2F2;
  padding-bottom: calc(160rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); 
}

button{
  padding: 0;
}
button::after{
  display: none;
}
button::before{
  display: none;
}
.main{
  background: #fff;
  padding-bottom: 10rpx;
}
.banner{
  width: 100%;
  height: 470rpx;
}
.detaisImg{
  width:100%;
  height:100%;
  min-height: 260rpx;
  line-height: 260rpx;
  text-align: center;
  display: block;
  background: #ccc;
}
.detailsA1 .item1{
  padding: 30rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  border-bottom: 2rpx solid #EEEEEE;
  margin-bottom: 20rpx;
}
.detailsA1 .item1 view{
  float: right;
  font-size:24rpx;
  font-weight:600;
  color:#999;
}
.detailsA1 .item1 view text{
  color:rgba(149,109,55, 1);
  padding-right: 10rpx;
}
.detailsA1 .item2{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  padding:5rpx 30rpx;
  margin-bottom: 20rpx;
}
.detailsA1 .item2 .ph{
  /* flex: 0 0 140rpx; */
  /* width: 140rpx; */
  line-height: 34rpx;
}
.detailsA1 .item2 .pb{
  flex: 1;
  line-height: 34rpx;
}
.detailsA2 .title{
  font-size:36rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  padding: 30rpx;
}
.detailsA2 .but{
  border-top: 2rpx solid #EEEEEE;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  font-size:20rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.detailsA2 .but image{
  transition: all 200ms;
  margin-right: 10rpx;
}
.detailsA2 .but.on image{
  transform: rotate(180deg);
}
.detailsA2 .text.unfold{
  height: 70rpx;
  overflow: hidden;
}
.detailsA2 .text.unfold2{
  height: 100rpx;
  overflow: hidden;
}
.detailsA3{ margin-bottom: 100rpx;}
.map{
  height: 400rpx;
  margin: 0 20rpx 10rpx 20rpx;
  padding-top: 20rpx;
}
.map map{
  width: 100%;
  height: 100%;
}
.bottom{
  position: fixed;
  bottom: 0;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom)); 
  left: 0;
  width: 100%;
  background: #F2F2F2;
}
.bottom .btn{
  width: 100%;
}
.box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  
}
.box .bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.7);
}
.boxMain{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 700rpx;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 10rpx;
  padding: 50rpx 40rpx;
}
.boxTitle{
  text-align: center;
  font-size: 36rpx;
}
.boxText{
  height: 50vh;
  margin:30rpx 0;
  line-height: 46rpx;
}
.boxBut{
  width:430rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:rgba(149,109,55, 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(149,109,55, 0.3);
  border-radius:4rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  margin: 0 auto;
}
