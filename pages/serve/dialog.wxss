button.btn {
  align-self: flex-end;
  background-color: rgba(var(--r), var(--g), var(--b), 1);
  color: #fff;
  width: 120rpx;
  margin: 0;
  padding:0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
}
button.btn[disabled]{
  opacity: .6;
  background-color: rgba(var(--r), var(--g), var(--b), 1);
  color: #fff;
}
.button-hover[type='primary']{
  background-color: rgba(var(--r), var(--g), var(--b), 1);
  opacity: .7;
}
