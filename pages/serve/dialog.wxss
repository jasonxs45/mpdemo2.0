.avatar{
  width: 94rpx;
  height: 94rpx;
}
.dialog-item .loading{
  display: none;
  line-height: 94rpx;
  padding:0 10rpx;
  color: #999;
}
.dialog-item .content{
  max-width: 460rpx;
  min-height: 94rpx;
  border-radius: 8rpx;
  background-color:rgba(var(--r), var(--g), var(--b), .5);
  font-size: 28rpx;
  color: #fff;
  margin: 0 0 0 20rpx;
  line-height: 1.5;
  padding: 26rpx;
  position: relative;
}
.dialog-item .content:after{
  content: '';
  position: absolute;
  top: 20rpx;
  left: -18rpx;
  width: 0;
  height: 0;
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent rgba(var(--r), var(--g), var(--b), .5) transparent transparent;
}
.dialog-item.right{
  flex-direction:row-reverse;
}
.dialog-item.right .content{
  background-color: rgba(var(--r), var(--g), var(--b), 1);
  margin: 0 20rpx 0 0;
}
.dialog-item.right .content:after{
  border-color: transparent transparent transparent rgba(var(--r), var(--g), var(--b), 1);
  left: auto;
  right: -18rpx;
}
.bar{
  width: 100%;
