@import '/templates/news-item/index.wxss';
/* rgba(var(--r), var(--g), var(--b), 1) */
.tabs{
  display: block;
  background: #fff;
}
.tab-item.active{
  background: #fff;
  font-weight:bold;
  color:rgba(var(--r), var(--g), var(--b), 1);
}
.main{
  width: 100%;
  height: calc(100vh - 100rpx);
}
.scroll-view{
  width: 100%;
  height: 100%;
}
.list-container{
  padding-top: 0 !important;
}
.nav:last-child .news-item.line:after {
  display: none;
}