@import '/templates/activity-item/index.wxss';
.nav-bar{
  display: flex;
  background: #fff;
  align-items: center;
  padding:0 15rpx 0 0;
}
.search-bar{
  flex: 1;
  background: #f8f8f8;
  border-radius: 4rpx;
}
.search-input{
  width: 100%;
  display: flex;
  align-items: center;
  height: 90rpx;
}
.tabs{
  width: 100%;
  display: block;
  background: #fff;
}
.tabs .tab-group{
  box-shadow: none;
}
.tab-item.active{
  background: #fff;
  font-weight:bold;
  color:rgba(149,109,55, 1);
}
.main{
  width: 100%;
  height: calc(100vh - 100rpx);
}
.scroll-view{
  width: 100%;
  height: 100%;
}
.list-container{
  padding-top: 0 !important;
}