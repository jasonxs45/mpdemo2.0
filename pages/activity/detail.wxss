/* rgba(149,109,55, 1) */
.banner{
  width: 100%;
}
.intro{
  background: #fff;
  padding: 30rpx;
  position: relative;
}
.intro .tag{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 20rpx;
  background: #f9e8e7;
  color: rgba(149,109,55, 1);
  height: 40rpx;
  line-height: 40rpx;
  padding:0 15rpx;
  border-radius: 4rpx;
}
.intro .tag.off{
  background: #eee;
  color: #777;
}
.name{
  font-weight: 500;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  padding-right: 100rpx;
}
.title{
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 20rpx;
  font-weight: 500;
}
.p{
  line-height: 1.5;
  font-size: 24rpx;
  color: #666;
}
.ph{
  font-weight: 300;
}
.my-info{
  background: #fff;
  padding: 30rpx;
}
.my-info .p{
  text-align: center;
}
.detail{
  background: #fff;
}
.line-title{
  display: block;
  text-align: center;
  font-size:28rpx;
  font-weight:700;
  color:#333333;
  line-height:28rpx;
  position: relative;
  padding: 30rpx;
}

.line-title::after{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -1rpx;
}

.line-title::before{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -1rpx;
}
.btns {
  padding: 30px 0 60px;
}
.btn{
  margin: 30rpx auto;
}
.qr-img{
  width: 360rpx;
  height: 360rpx;
  margin: 60rpx auto;
  position: relative;
}
.qr-img .img{
  display: block;
  width: 100%;
  height: 100%;
}
.qr-img .img.checked{
  opacity: .3;
}
.qr-img .cover{
  position: absolute;
  width: 340rpx;
  height: 340rpx;
  line-height: 340rpx;
  font-size: 28rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, .9);
  text-align: center;
  color: #333;
  font-weight: 500;
  letter-spacing: 2px;
}