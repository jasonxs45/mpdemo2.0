.shop-item{
  width: 330rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, .1);
}
.shop-item.line{
  width: 100%;
  padding: 30rpx;
  box-shadow: none;
}
.shop-item .pic{
  width: 330rpx;
  height: 330rpx;
}
.shop-item.line .pic{
  flex: 0 0 240rpx;
  height: 180rpx;
}
.shop-item .pic .img{
  width: 100%;
  height: 100%;
}
.shop-item .text-wrapper{
  padding: 20rpx;
}
.shop-item.line .text-wrapper{
  flex: 1;
}
.shop-item .name{
  font-size:36rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shop-item .project{
  font-size:24rpx;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  margin: 10rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shop-item.line .cost{
  margin-top: 20rpx;
}
.shop-item .cost{
  font-size:24rpx;
  color:rgba(199,25,7,1);
  line-height:34rpx;
}