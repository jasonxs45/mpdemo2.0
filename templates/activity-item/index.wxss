.activity-item{
  margin: 30rpx 30rpx 0;
  height: 240rpx;
  position: relative;
  background: #fff;
}
.activity-item .img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.activity-item .title{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 30rpx;
  background: linear-gradient(transparent, rgba(0,0,0,.9));
  border-radius: 0 0 8rpx 8rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 1px 1px 2px rgba(0,0,0,.3);
}