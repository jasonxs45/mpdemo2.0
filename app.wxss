/**app.wxss**/
view, cover-view, scroll-view, picker-view, swiper, swiper-item, navigator, image, input, text, textarea, radio, checkbox{
  box-sizing: border-box;
  padding:0;
  margin:0;
  line-height: 1;
}
page{
  font-family: -apple-system-font,BlinkMacSystemFont,"Helvetica Neue","PingFang SC","Hiragino Sans GB","Microsoft YaHei UI","Microsoft YaHei",Arial,sans-serif;
  color: #333;
  background: #f2f2f2;
}
.navigator-hover{
  background: none;
}
.flex{
  display: flex;
}
.thin{
  font-weight: 200;
}
.bold{
  font-weight: bold;
}
button.red{
  height:88rpx;
  background:rgba(245, 63, 0, 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(245, 63, 0,0.3);
  border-radius:4rpx;
  color: #fff;
  line-height: 88rpx;
  padding: 0 30rpx;
}
button.main-theme{
  height:88rpx;
  background:rgba(149,109,55, 1);
  box-shadow:0px 16rpx 28rpx 0px rgba(149,109,55,0.3);
  border-radius:4rpx;
  color: #fff;
  line-height: 88rpx;
  padding: 0 30rpx;
}
.red-dot{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: -5rpx;
  top:-5rpx;
  background: rgb(241, 56, 56);
  border-radius: 50%;
  box-shadow: 0 0 10rpx 0 rgba(241, 56, 56, .6);
}
@keyframes circle {
  0% {transform: rotate(0deg)}
  100% {transform: rotate(360deg)}
}